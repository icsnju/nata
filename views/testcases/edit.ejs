<% include ../partials/header %>

<div id="testcase-edit">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-5">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">编辑录制用例</h3>
                    </div>
                    <div class="panel-body">
                        <form id="form-edit">
                            <div class="form-group">
                                <label for="name">用例名称</label>
                                <input type="text" class="form-control" id="name" value="<%= testcase.name %> ">
                            </div>
                            <div class="form-group">
                                <label for="actions">动作</label>
                                <textarea class="form-control" rows="15" id="actions"><%= actions %></textarea>
                            </div>
                            <button id="btn-save" type="submit" class="btn btn-default"
                                    data-id="<%= testcase._id %>">保存
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-7">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">动作格式指南</h3>
                    </div>
                    <div class="panel-body" id="action-panel">
                        <ol>
                            <li><tt>[点击]:Tap <span class="label label-primary">at</span></tt></li>
                            <li><tt>[长按]:LongClick <span class="label label-primary">at</span></tt></li>
                            <li><tt>[滑动]:Swipe <span class="label label-primary">at</span>
                                    <span class="label label-default">Direction</span></tt></li>
                            <li><tt>[输入]:TextInput <span class="label label-primary">at</span>
                                    <span class="label label-success"> text</span></tt></li>
                            <li><tt>[重启]:Restart <span class="label label-info">pkgAct</span></tt></li>
                            <li><tt>[清除数据]:CleanData <span class="label label-warning">pkg</span></tt></li>
                            <li><tt>[返回]:Back</tt></li>
                            <li><tt>[主页]:Home</tt></li>
                            <li><tt>[选项]:Menu</tt></li>
                        </ol>
                    </div>
                    <ul class="list-group">
                        <li class="list-group-item"><span class="label label-primary">at</span>
                            为@[startX],[startY]x[endX],[endY] 为控件坐标,如 @0,210x200,1080
                        </li>
                        <li class="list-group-item"><span class="label label-default">Direction</span>
                            为滑动方向,有UP,DOWN,LEFT,RIGHT
                        </li>
                        <li class="list-group-item"><span class="label label-success"> text</span>
                            为输入的文字
                        </li>
                        <li class="list-group-item"><span class="label label-info">pkgAct</span>
                            为应用的Entry名,如com.cvicse.zhnt/.LoadingActivity
                        </li>
                        <li class="list-group-item"><span class="label label-warning">pkg</span>
                            为应用包名
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/javascripts/testcase_edit.js"></script>
<% include ../partials/footer.ejs %>